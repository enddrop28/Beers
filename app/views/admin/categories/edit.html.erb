<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-1">
        <h2 class="my-5">ジャンル編集</h2>
        <%= form_with model: [:admin, @category], local:true, class: 'form-group row' do |f| %>
          <div class="col-auto">
            <label class="col-form-label">ジャンル名</label>
          </div>
          <div class="col-auto">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="col-auto">
            <%= f.submit '変更を保存', class: 'btn btn-success mb-3' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>