<main>
  <div class="container">
    <div class="row">
      <!--<div class="col-md-2 offset-md-1 side-bar my-5">-->
        
      <!--</div>-->
      
      <div class="col-md-3 my-5">
        <h2>新着投稿</h2>
      <div class="col-12">
        <% @post.each.with_index(1) do |post| %>
          <%= link_to post_path(post.id), class: "card m-2 stretched-link" do %>
            <%= attachment_image_tag post, :post_image, format: '.jpeg', class: "bd-placeholder-img card-img-top", size: "100x100" %>
            <div class="card-body" style="width:180px">
              <p class="card-title mb-2 text-wrap font-weight-bold text-body"><%= post.name %></p>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</main>