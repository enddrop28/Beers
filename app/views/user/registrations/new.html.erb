<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-1">
        <h2 class="my-5">新規会員登録</h2>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <table class="table table-borderless mb-5">
            <tbody>
              <tr>
                <th><%= f.label :氏名 %></th>
                <td>
                  <div class="input-group">
                    <div class="d-flex input-group-prepend">
                      <span class="input-group-text">(姓)</span>
                    </div>
                    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "鈴木",class: "form-control" %>
                  </div>
                </td>
                <td>
                  <div class="input-group">
                    <div class="d-flex input-group-prepend">
                      <span class="input-group-text">(名)</span>
                    </div>
                    <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "一郎",class: "form-control" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th><%= f.label :フリガナ %></th>
                <td>
                  <div class="input-group">
                    <div class="d-flex input-group-prepend">
                      <span class="input-group-text">(セイ)</span>
                    </div>
                    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "スズキ",class: "form-control" %>
                  </div>
                </td>
                <td>
                  <div class="input-group">
                    <div class="d-flex input-group-prepend">
                      <span class="input-group-text">(メイ)</span>
                    </div>
                    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "イチロウ",class: "form-control" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th><%= f.label :メールアドレス %></th>
                <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@sample.com",class: "form-control" %></td>
                <td></td>
              </tr>
              <tr>
              <tr>
                <th><%= f.label :パスワード（6文字以上） %></th>
                <td><%= f.password_field :password, autocomplete: "new-password",class: "form-control" %></td>
                <td></td>
              </tr>
              <tr>
                <th><%= f.label :パスワード（確認用） %></th>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %></td>
                <td></td>
              </tr>
            </tbody>
          </table>
          <div class="col text-center mb-5">
            <%= f.submit "新規登録", class: 'btn btn-sm btn-success w-25 mt-3' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 offset-md-1 mb-5">
        <h2>既に登録済みの方</h2>
        <p><%= link_to "こちら", new_user_session_path %>からログインしてください</p>
        </div>
      </div>
    </div>
  </div>
</main>