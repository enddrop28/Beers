<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-1">
        <h2 class="my-5">新規投稿</h2>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
        <%= form_with model: @post, local:true do |f| %>
          <table class="table table-borderless mb-5">
            <tbody>
              <tr>
                <th>画像</th>
                <td><%= f.attachment_field :post_image %></td>
              </tr>
              <tr>
                <th>ビール名</th>
                <td><%= f.text_field :name, placeholder: 'ビール名', class: 'form-control' %></td>
              </tr>
              <tr>
                <th>説明</th>
                <td><%= f.text_area :description, rows: '5', placeholder: 'ここに説明文を記述します', class: 'form-control' %></td>
              </tr>
              <tr>
                <th>ジャンル</th>
                <td><%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "--選択してください--"}, { class: 'form-control' , required: true } %></td>
              </tr>
            </tbody>
          </table>
          <div class="col text-center mb-5">
            <%= f.submit '投稿する', class: 'btn btn-success mx-3' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>